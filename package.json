{
  "name": "link-redux",
  "version": "1.0.0-rc4",
  "description": "React library to make rendering linked data easy",
  "sideEffects": false,
  "repository": "https://github.com/fletcher91/link-redux.git",
  "scripts": {
    "build": "pika build",
    "doc": "rm -rf dist/docs/* && typedoc --tsconfig tsconfig-types.json --exclude **/*.spec.ts --excludeExternals --excludePrivate --mode file --theme minimal --target ES6 --includeDeclarations --out dist/docs/ src/",
    "doc:deploy": "gh-pages -d ./dist/docs",
    "lint": "tslint -c tslint.json 'src/**/*.{ts,tsx}'",
    "prebuild": "rm -rf dist/*",
    "prepublish": "npm run build",
    "pretest": "npm run lint",
    "test": "jest --coverage",
    "version": "npm run build"
  },
  "author": "Fletcher91 <thom@argu.co>",
  "license": "LGPL-3.0",
  "@pika/pack": {
    "pipeline": [
      [
        "@pika/plugin-ts-standard-pkg",
        {
          "exclude": [
            "__tests__/**/*"
          ]
        }
      ],
      [
        "@pika/plugin-build-node"
      ],
      [
        "@pika/plugin-build-web"
      ]
    ]
  },
  "peerDependencies": {
    "@ontologies/core": ">= 2.0.0",
    "hoist-non-react-statics": ">=3.x",
    "http-status-codes": ">= 1.x",
    "link-lib": ">=2.0.0-0.7",
    "prop-types": ">= 15.x",
    "react": ">= 16.10.x"
  },
  "devDependencies": {
    "@babel/preset-react": "^7.9.4",
    "@ontola/memoized-hash-factory": "^2.0.0",
    "@ontologies/as": "^1.0.1",
    "@ontologies/core": "2.0.0",
    "@ontologies/ld": "^1.0.0",
    "@ontologies/owl": "^1.0.0",
    "@ontologies/rdf": "^1.0.0",
    "@ontologies/rdfs": "^1.0.0",
    "@ontologies/schema": "^1.0.0",
    "@ontologies/shacl": "^1.0.0",
    "@ontologies/xsd": "^1.0.0",
    "@pika/pack": "^0.5.0",
    "@pika/plugin-build-node": "^0.8.1",
    "@pika/plugin-build-web": "^0.8.1",
    "@pika/plugin-ts-standard-pkg": "^0.8.1",
    "@rdfdev/iri": "^1.0.0",
    "@types/enzyme": "^3.10.5",
    "@types/enzyme-adapter-react-16": "^1.0.6",
    "@types/hoist-non-react-statics": "^3.3.1",
    "@types/jest": "^25.1.4",
    "@types/prop-types": "^15.7.3",
    "@types/react": "^16.9.27",
    "@types/react-dom": "^16.9.5",
    "core-js": "^3.6.4",
    "enzyme": "^3.11.0",
    "enzyme-adapter-react-16": "^1.15.2",
    "gh-pages": "^2.0.1",
    "hoist-non-react-statics": "^3.3.2",
    "http-status-codes": "1.x",
    "jest": "^25.2.4",
    "jest-enzyme": "^7.1.2",
    "link-lib": "2.0.0-1",
    "n-quads-parser": "^2.1.0",
    "prop-types": "^15.x",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "react-test-renderer": "^16.13.1",
    "tslint": "^5.20.0",
    "tslint-react": "^4.1.0",
    "type-zoo": "^3.4.1",
    "typedoc": "^0.15.0",
    "typescript": "^3.7.3",
    "whatwg-fetch": "^3.0.0",
    "whatwg-url": "^7.0.0"
  },
  "babel": {
    "presets": [
      "@babel/preset-typescript"
    ]
  },
  "jest": {
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "/__tests__/"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 90,
        "functions": 95,
        "lines": 95,
        "statements": 95
      }
    },
    "setupFiles": [
      "core-js"
    ],
    "testMatch": [
      "**/*.spec.ts",
      "**/*.spec.tsx"
    ],
    "moduleFileExtensions": [
      "js",
      "ts",
      "tsx"
    ],
    "setupFilesAfterEnv": [
      "./src/__tests__/helpers/setup.ts"
    ],
    "testURL": "http://example.org/resources/5"
  }
}
